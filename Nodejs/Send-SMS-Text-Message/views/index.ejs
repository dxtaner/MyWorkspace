<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Send SMS</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="/socket.io/socket.io.js"></script>
    <style>
        body {
            background: linear-gradient(to right, #667eea, #764ba2);
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .card {
            border-radius: 15px;
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.2);
            overflow: hidden;
        }

        .card-header {
            background: #4a00e0;
            background: linear-gradient(to right, #8e2de2, #4a00e0);
            color: white;
            text-align: center;
            font-size: 1.4rem;
            font-weight: bold;
        }

        .form-control {
            border-radius: 10px;
            padding: 10px;
            font-size: 1rem;
        }

        .btn-primary {
            background: linear-gradient(to right, #8e2de2, #4a00e0);
            border: none;
            padding: 12px;
            font-size: 1.1rem;
            transition: all 0.3s ease;
        }

        .btn-primary:hover {
            background: linear-gradient(to right, #6a11cb, #2575fc);
            transform: scale(1.03);
        }

        .alert {
            border-radius: 10px;
            font-weight: bold;
            text-align: center;
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-5">
                <div class="card">
                    <div class="card-header">
                        ðŸ“© Send an SMS
                    </div>
                    <div class="card-body">
                        <form id="sms-form">
                            <div class="mb-3">
                                <label for="number" class="form-label">Phone Number</label>
                                <input type="text" id="number" class="form-control" placeholder="e.g., +15554443322" required>
                            </div>
                            <div class="mb-3">
                                <label for="message" class="form-label">Message</label>
                                <textarea id="message" class="form-control" rows="3" placeholder="Type your message..." required></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary w-100">Send</button>
                        </form>
                        <div id="status" class="alert mt-3 d-none"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        const form = document.getElementById("sms-form");
        const statusDiv = document.getElementById("status");
        const socket = io();

        form.addEventListener("submit", async (e) => {
            e.preventDefault();

            const number = document.getElementById("number").value;
            const message = document.getElementById("message").value;

            const response = await fetch("/", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ number, text: message })
            });

            const data = await response.json();
            console.log(data);

            statusDiv.classList.remove("d-none", "alert-danger");
            statusDiv.classList.add("alert-success");
            statusDiv.innerText = "Message sent successfully!";
        });

        socket.on("smsStatus", (data) => {
            statusDiv.classList.remove("d-none", "alert-success");
            if (data.error) {
                statusDiv.classList.add("alert-danger");
                statusDiv.innerText = `Message failed: ${data.error}`;
            } else {
                statusDiv.classList.add("alert-success");
                statusDiv.innerText = `Message sent successfully! Message ID: ${data.id}`;
            }
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
